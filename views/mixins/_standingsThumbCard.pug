mixin standingsThumbCard(standing)
  .col-md-4
    .card.mb-4.shadow-sm
      svg.bd-placeholder-img.card-img-top&attributes({"width": "100%"}, {"height": "225"}, {"focusable": "false"}, {"role": "img"})
        title #{standing.name}
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") #{standing.name}
      .card-body
        .card-text Rank: #{standing.standing} 
        .card-text Points: #{standing.points} 
        .card-text Players Left : #{standing.playersLeft}
        .card-text MVP: #{standing.mvp}
        .d-flex.justify-content-between.align-items-center
          .btn-group
            a.btn.btn-sm.btn-outline-secondary(href=`/roster/${standing.name}`) Roster